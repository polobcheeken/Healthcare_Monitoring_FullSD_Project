@page "/hospitals/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Hospital</h3>
<hr />
<br />


<FormComponent ButtonText="Create Hospital" OnValidSubmit="CreateHospital" hospital="hospital" />


@code {
    Hospital hospital = new Hospital();


    private async Task CreateHospital()
    {
        await _client.PostAsJsonAsync(Endpoints.HospitalsEndpoint, hospital);
        _navManager.NavigateTo("/hospitals/");
    }

}